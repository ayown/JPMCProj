# Application
APP_ENV=development
APP_NAME=fraud-detection-system
LOG_LEVEL=info

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0

# Auth Service
AUTH_SERVICE_PORT=8081
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# Verification Service
VERIFICATION_SERVICE_PORT=8082

# Worker Service
WORKER_SERVICE_PORT=8083
WORKER_CONCURRENCY=10

# ML Service
ML_SERVICE_URL=http://ml-service:8000
ML_SERVICE_PORT=8000
ML_SERVICE_HOST=0.0.0.0
HUGGINGFACE_TOKEN=your-huggingface-token-here

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=frauddetection
DATABASE_PASSWORD=frauddetection_password
DATABASE_NAME=frauddetection_db
DATABASE_SSL_MODE=disable
DATABASE_MAX_CONNECTIONS=100
DATABASE_MAX_IDLE_CONNECTIONS=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_VERIFICATION=verification-requests
KAFKA_TOPIC_REPORTS=fraud-reports
KAFKA_TOPIC_ALERTS=fraud-alerts
KAFKA_CONSUMER_GROUP=fraud-detection-workers
KAFKA_AUTO_OFFSET_RESET=earliest

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Model Paths
MODEL_PATH=/app/models
DISTILBERT_MODEL_PATH=/app/models/distilbert
ROBERTA_MODEL_PATH=/app/models/roberta
LSTM_MODEL_PATH=/app/models/lstm
XGBOOST_MODEL_PATH=/app/models/xgboost
ENSEMBLE_MODEL_PATH=/app/models/ensemble

# Training
TRAINING_DATA_PATH=/app/data
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=10
TRAINING_LEARNING_RATE=2e-5

# Performance
MAX_MESSAGE_LENGTH=1000
INFERENCE_TIMEOUT=5s
VERIFICATION_TIMEOUT=10s
CACHE_ENABLED=true

# Security
ENABLE_API_KEY_AUTH=false
API_KEY_HEADER=X-API-Key
ENCRYPT_MESSAGES=true
MASK_PII=true
DATA_RETENTION_DAYS=30

# Feature Flags
ENABLE_RBI_VERIFICATION=true
ENABLE_HEADER_VERIFICATION=true
ENABLE_ENSEMBLE_MODEL=true
ENABLE_CACHING=true
ENABLE_ASYNC_PROCESSING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# External Services
RBI_API_URL=https://api.rbi.org.in
TELECOM_VERIFICATION_URL=
